<clientConfig version="1.1">
  <emailProvider id="example.com"> <!-- Replace `example.com` -->
    <domain>example.com</domain> <!-- Replace `example.com` -->
    <displayName>Example Mail</displayName> <!-- Replace `Example Mail` -->
    <displayShortName>Example</displayShortName> <!-- Replace `Example` -->
    <incomingServer type="imap">
      <hostname>mail.mxlogin.com</hostname> <!-- Replace `mail.mxlogin.com` if needed -->
      <port>993</port> <!-- No change unless using a custom port -->
      <authentication>password-cleartext</authentication> <!-- No change -->
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>mail.mxlogin.com</hostname> <!-- Replace `mail.mxlogin.com` if needed -->
      <port>465</port> <!-- No change unless using a custom port -->
      <authentication>password-cleartext</authentication> <!-- No change -->
    </outgoingServer>
  </emailProvider>
</clientConfig>
