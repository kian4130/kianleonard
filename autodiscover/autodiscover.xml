<Autodiscover xmlns="http://schemas.microsoft.com/exchange/autodiscover/outlook/responseschema/2006a">
  <Response>
    <Account>
      <AccountType>email</AccountType> <!-- No change -->
      <Action>settings</Action> <!-- No change -->
      <Protocol>
        <Type>IMAP</Type> <!-- No change -->
        <Server>mail.mxlogin.com</Server> <!-- Replace `mail.mxlogin.com` if needed -->
        <Port>993</Port> <!-- No change unless using a custom port -->
        <LoginName>%EMAILADDRESS%</LoginName> <!-- No change -->
        <SSL>on</SSL> <!-- No change -->
      </Protocol>
      <Protocol>
        <Type>SMTP</Type> <!-- No change -->
        <Server>mail.mxlogin.com</Server> <!-- Replace `mail.mxlogin.com` if needed -->
        <Port>465</Port> <!-- No change unless using a custom port -->
        <LoginName>%EMAILADDRESS%</LoginName> <!-- No change -->
        <SSL>on</SSL> <!-- No change -->
      </Protocol>
    </Account>
  </Response>
</Autodiscover>
